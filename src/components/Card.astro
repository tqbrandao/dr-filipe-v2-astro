---
import Icon from './Icon.astro';

interface Props {
	title: string;
	body: string;
	href?: string;
	icon: string;
}

const { href, title, body, icon } = Astro.props;
---

<div class="relative overflow-hidden rounded-lg border bg-background p-2">
	<div class="flex h-[180px] flex-col justify-between rounded-md p-5">
	 <Icon name={icon} className="w-10 h-10 md:w-12 md:h-12"/>
	  <div class="space-y-2">
		<h3 class="font-bold">{title}</h3>
		<p class="text-sm text-muted-foreground">{body}</p>
	  </div>
	</div>
  </div>
