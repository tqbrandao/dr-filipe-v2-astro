---
import { cn } from "@/lib/utils";
import { Image } from "astro:assets";
import logo from "../../assets/logos/dr-filipe-footer-2.svg";
import Icon from "../Icon.astro";
import { buttonVariants } from "../ui/button";

type Props = {
  className?: string;
};

const { className } = Astro.props;
---

<footer class={cn(className, "border-t")}>
  <div
    class="flex flex-col items-center justify-center pt-10 gap-10 bg-card-foreground"
  >
    <div class="flex flex-col md:flex-row gap-8 md:gap-40 text-center">
      <div class="flex flex-col">
        <a href="#">
          <Image src={logo} alt="Logo Dr. Filipe" width="250" />
        </a>
      </div>

      <div class="flex flex-col">
        <h3 class="font-bold text-[#2563EB] uppercase">Contato</h3>
        <p class="mt-6 text-white">(61) 9 9912-8853</p>
      </div>

      <div class="flex flex-col">
        <!--<a href="https://drfilipevidica.com.br/politica-e-termos/" target="_blank">-->
        <h3 class="font-bold text-[#2563EB] uppercase">Links</h3>
        <a href="/politica-de-privacidade/" target="_blank">
          <p class="mt-6 text-white">Política de Privacidade</p>
        </a>
        <a href="/termos-e-condicoes/" target="_blank">
          <p class="mt-6 text-white">Termos e Condições</p>
        </a>
      </div>

      <div class="flex flex-col gap-4">
        <h3 class="font-bold text-[#2563EB] uppercase">Redes sociais</h3>
       
        <a href="https://www.instagram.com/filipevidica/" target="_blank" class={cn(buttonVariants({ size: "lg" }), "p-0 mx-auto")}>
          <Icon name="instagram" width="7" height="7" className="m-2" />
        </a>
      </div>
    </div>

    <div class="bg-foreground dark:bg-foreground/50 flex w-full justify-center mb-4">
      <p class="text-center text-md leading-loose text-primary-foreground">
        © 2024 - <strong>Dr. Filipe Vidica</strong> - Todos os direitos reservados
      </p>
    </div>
    
  </div>
</footer>
