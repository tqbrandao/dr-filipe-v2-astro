---
import Stethoscope from "./icons/Stethoscope.astro";
import Whatsapp from "./icons/Whatsapp.astro";
import Instagram from "./icons/Instagram.astro";
import Briefcase from "./icons/Briefcase.astro";
import GraduationCap from "./icons/GraduationCap.astro";
import HeartPulse from "./icons/HeartPulse.astro";
import Users from "./icons/Users.astro";
import Magnifier from "./icons/Magnifier.astro";
import Question from "./icons/Question.astro"
import User from "./icons/User.astro"


import { cn } from "@/lib/utils";

const iconMap: any = {
  stethoscope: Stethoscope,
  whatsapp: Whatsapp,
  instagram: Instagram,
  briefcase: Briefcase,
  graduationCap: GraduationCap,
  heartPulse: HeartPulse,
  user: User,
  users: Users,
  magnifier: Magnifier,
  question: Question  
};

const { width, height, className } = Astro.props;
const IconComponent = iconMap[Astro.props.name];
---

<span class={cn(`[&>svg]:h-${height} [&>svg]:w-${width}`, className)}>
  <IconComponent />
</span>
