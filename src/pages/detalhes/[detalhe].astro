---
import MainLayout from "@/layouts/main-layout.astro";
import treatmentsData from "../../../public/data/treatments.json";
import { isTemplateExpression } from "typescript";
import { Image } from "astro:assets";
import image1 from "../../assets/images/photo-1527137342181-19aab11a8ee8.avif";

export function getStaticPaths() {
  return treatmentsData.map((treatment) => ({
    params: { detalhe: treatment.href },
    props: { title: treatment.title, body: treatment.body },
  }));
}

