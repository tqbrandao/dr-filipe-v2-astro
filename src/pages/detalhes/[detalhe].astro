const { detalhe } = Astro.params;
const { title, body } = Astro.props;
---

<MainLayout title={title}>
  <div class="pt-16 flex items-center justify-center mb-12">
    <Image src={image1} alt="Imagem de teste" width="600" />
  </div>

  <div class="w-[1000px] m-auto flex flex-col gap-4">
    <h1 class="text-2xl font-semibold text-primary mb-8">{title}</h1>
    <p>{body}</p>
    <p>{body}</p>
    <p>{body}</p>
    <p>{body}</p>
  </div>
</MainLayout>
